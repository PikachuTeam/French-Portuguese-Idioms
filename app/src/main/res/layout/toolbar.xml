<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar"
    android:background="?attr/colorPrimary"
    android:backgroundTint="@color/primary"
    app:layout_scrollFlags="scroll|enterAlways">


    <LinearLayout
        android:id="@+id/realtoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/toolbar_padding_bot"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/img_btn_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="73"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"


                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_btn"
                    android:layout_width="@dimen/toolbar_img_item_size2"
                    android:layout_height="@dimen/toolbar_img_item_size2"
                    android:layout_marginTop="@dimen/toolbar_img_item_margin"
                    android:src="@drawable/backward4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/toolbar_tittle_margin_left"
                    android:layout_marginTop="@dimen/toolbar_tittle_margin_top"
                    android:singleLine="true"
                    android:text="@string/title_activity_main"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/toolbar_tittle_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp1"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/toolbar_item1_layout"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/toolbar_item1"

                    android:layout_width="@dimen/toolbar_img_item_size"
                    android:layout_height="@dimen/toolbar_img_item_size"
                    android:layout_marginTop="@dimen/toolbar_img_item_margin"

                    android:background="@color/white"
                    android:visibility="visible"


                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toolbar_item2_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp1"
                android:layout_weight="50"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/toolbar_item2"
                    android:layout_width="@dimen/toolbar_img_item_size"
                    android:layout_height="@dimen/toolbar_img_item_size"
                    android:layout_marginTop="@dimen/toolbar_img_item_margin"

                    android:background="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    ////////////////////////////////////////////////////////////


    <LinearLayout
        android:id="@+id/faketoolBar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/toolbar_padding_bot"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/img_btn__fake_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/img_btn_fake"
                    android:layout_width="@dimen/toolbar_img_item_size2"
                    android:layout_height="@dimen/toolbar_img_item_size2"
                    android:layout_marginTop="@dimen/toolbar_img_item_margin"
                    android:src="@drawable/close47" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_title_fake"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/toolbar_tittle_margin_left"
                    android:layout_marginTop="@dimen/toolbar_tittle_margin_top"
                    android:singleLine="true"
                    android:text="@string/title_activity_main"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/toolbar_tittle_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.Toolbar>
