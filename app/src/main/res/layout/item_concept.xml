<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FlatEffectDrawable xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginRight="@dimen/dp2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp2"
        card_view:cardBackgroundColor="@color/topic_item"
        card_view:cardCornerRadius="@dimen/dp1"
        card_view:cardElevation="@dimen/dp2"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_item_topic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp7"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginTop="@dimen/dp7"
            android:singleLine="true"
            android:text="ABADON"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25" />
    </android.support.v7.widget.CardView>
</tatteam.com.app_common.ui.drawable.FlatEffectDrawable>