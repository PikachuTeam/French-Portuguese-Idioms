<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/list_item_favorite_character"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp3"
        android:layout_marginRight="@dimen/dp3"
        android:visibility="gone"
        card_view:cardBackgroundColor="@color/favorite_character_background"
        card_view:cardCornerRadius="@dimen/dp1"
        card_view:cardElevation="@dimen/dp2"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tvTittle_List_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_idiom_margin_left"
            android:singleLine="true"
            android:text="Idiom"
            android:textColor="@color/white"
            android:textSize="@dimen/favorite_text_size" />
    </android.support.v7.widget.CardView>


    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/item_margin_right"

            android:layout_marginRight="@dimen/item_margin_right"
            card_view:cardCornerRadius="@dimen/dp2"

            card_view:cardElevation="@dimen/dp2"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="100">


                    <LinearLayout
                        android:id="@+id/acz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:orientation="vertical"
                        android:padding="@dimen/list_padding">

                        <TextView
                            android:id="@+id/tvTittle_List"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/list_idiom_margin_left"
                            android:singleLine="true"
                            android:text="Idiom"
                            android:textColor="@color/my_text"

                            android:textSize="@dimen/list_idiom_textsize" />

                        <TextView
                            android:id="@+id/tvMeanning_List"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/list_idiom_meaning_margin_left"
                            android:singleLine="true"
                            android:text="Meaning frgaga gagaggaa ff a a "
                            android:textColor="@color/my_list_secondary_text"
                            android:textSize="@dimen/list_idiom_meaning_textsize"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/favorite_icon_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/favorite_icon"
                            android:layout_width="@dimen/favorite_icon_size"
                            android:layout_height="@dimen/favorite_icon_size"

                            android:layout_marginTop="@dimen/favorite_icon_margin_top" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</LinearLayout>